<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.baragon.MyFitnessBuddy"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="19"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity android:name=".DiaryActivity"
                  android:label="@string/main_label"
                  android:theme="@style/MFBActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".AddFoodActivity"
                  android:label="@string/add_food_label"
                  android:theme="@style/MFBActionBarTheme">
        </activity>
        <activity android:name=".NewFoodActivity"
                  android:label="@string/new_food_label"
                  android:theme="@style/MFBActionBarTheme">
        </activity>
        <activity android:name=".GoalsActivity"
                  android:label="@string/goals_label"
                  android:theme="@style/MFBActionBarTheme">
        </activity>
        <activity android:name=".MFBPreference"
                  android:label="@string/settings_label"
                  android:theme="@style/MFBActionBarTheme">
        </activity>
    </application>
</manifest>
