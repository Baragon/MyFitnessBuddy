<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal"
                  android:baselineAligned="false">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.1">
            <Space
                    android:layout_width="40px"
                    android:layout_height="match_parent"
                    />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Bounty"
                        android:id="@+id/foodNameTextView"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="100g x 2.0"
                        android:id="@+id/servingTextView"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                >
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="490"
                    android:id="@+id/calTextView" android:layout_weight="1" android:gravity="center"
                    android:textColor="@android:color/darker_gray"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="3"
                    android:id="@+id/proteinTextView" android:layout_weight="1" android:gravity="center"
                    android:textColor="@android:color/darker_gray"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="59"
                    android:id="@+id/carbsTextView" android:layout_weight="1" android:gravity="center"
                    android:textColor="@android:color/darker_gray"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="26"
                    android:id="@+id/fatTextView" android:layout_weight="1" android:gravity="center"
                    android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <Space android:layout_width="40px" android:layout_height="match_parent"/>
        <View style="@style/HorizontalDivider"/>
    </LinearLayout>
</LinearLayout>